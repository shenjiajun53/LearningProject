<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jory.learningproject">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SynchronizedThreadActivity"
            android:label="@string/title_activity_synchronized_thread"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeatherActivity"
            android:label="@string/title_activity_weather"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BottomEditActivity"
            android:label="@string/title_activity_bottom_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JniActivity"
            android:label="@string/title_activity_jni"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JsonTestActivity"
            android:label="@string/title_activity_json_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TinkerActivity"
            android:label="@string/title_activity_tinker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NestedBehaviorActivity"
            android:label="@string/title_activity_nested_behavior"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>